{
  "volumes": [
    {
      "name": "couchdblib",
      "host": {
        "sourcePath": "/var/data/couchdb/lib"
      }
    },
    {
      "name": "couchdblog",
      "host": {
        "sourcePath": "/var/data/couchdb/log"
      }
    },
    {
      "name": "couchdbetc",
      "host": {
        "sourcePath": "/var/data/couchdb/etc"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "couchdb",
      "image": "673249040706.dkr.ecr.eu-west-1.amazonaws.com/couchdb:latest",
      "portMappings": [
        {
          "containerPort": 5984,
          "hostPort": 5984
        }
      ],
      "memory": 512,
      "entryPoint": ["/docker-command.sh"],
      "environment" : [
        { "name" : "ADMIN_USER", "value" : "admin" },
        { "name" : "ADMIN_PASSWORD", "value" : "admin" }
      ],
      "mountPoints": [
        {
          "sourceVolume": "couchdblib",
          "containerPath": "/usr/local/var/lib/couchdb",
          "readOnly": false
        },
        {
          "sourceVolume": "couchdblog",
          "containerPath": "/usr/local/var/log/couchdb",
          "readOnly": false
        },
        {
          "sourceVolume": "couchdbetc",
          "containerPath": "/usr/local/var/etc/couchdb",
          "readOnly": false
        }
      ],
      "essential": true
    }
  ],
  "family": "athena"
}
